<%- include("partials/header"); %>

<h1>Compose</h1>

<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="titleLabel">Title</label>
    <input type="text" class="form-control" id="titleInput" placeholder="Enter title" name="composeTitle">
</div>
<div class="form-group">
  <label for="postLabel">Post</label>
  <textarea class="form-control" id="postInput" placeholder="Enter content" name="composePost" rows=5></textarea>
</div>
<button class="btn btn-primary" type="submit" name="publish">Publish</button>
</form>

